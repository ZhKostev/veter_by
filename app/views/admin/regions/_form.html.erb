<%= form_for [:admin, @region], :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.input :title %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_regions_path, :class => 'btn' %>
  </div>
<% end %>
