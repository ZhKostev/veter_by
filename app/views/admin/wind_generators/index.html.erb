<%- model_class = WindGenerator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:min_rated_power) %></th>
      <th><%= model_class.human_attribute_name(:max_rated_power) %></th>
      <th><%= model_class.human_attribute_name(:min_rated_wind_speed) %></th>
      <th><%= model_class.human_attribute_name(:max_wind_speed) %></th>
      <th><%= model_class.human_attribute_name(:region) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @wind_generators.each do |wind_generator| %>
      <tr>
        <td><%= link_to wind_generator.title, admin_wind_generator_path(wind_generator) %></td>
        <td><%= wind_generator.min_rated_power %></td>
        <td><%= wind_generator.max_rated_power %></td>
        <td><%= wind_generator.min_rated_wind_speed %></td>
        <td><%= wind_generator.max_wind_speed %></td>
        <td><%= wind_generator.region.try(:title) %></td>
        <td><%= wind_generator.latitude %></td>
        <td><%= wind_generator.longitude %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_wind_generator_path(wind_generator), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_wind_generator_path(wind_generator),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @wind_generators %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_wind_generator_path,
            :class => 'btn btn-primary' %>
