<%- model_class = WindGenerator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<%= image_tag @wind_generator.photo_url, :class => 'left' %>
<dl class="dl-horizontal left">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @wind_generator.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:min_rated_power) %>:</strong></dt>
  <dd><%= @wind_generator.min_rated_power %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max_rated_power) %>:</strong></dt>
  <dd><%= @wind_generator.max_rated_power %></dd>
  <dt><strong><%= model_class.human_attribute_name(:min_rated_wind_speed) %>:</strong></dt>
  <dd><%= @wind_generator.min_rated_wind_speed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max_wind_speed) %>:</strong></dt>
  <dd><%= @wind_generator.max_wind_speed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @wind_generator.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @wind_generator.longitude %></dd>
</dl>

<div class="clear"></div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_wind_generators_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_wind_generator_path(@wind_generator), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_wind_generator_path(@wind_generator),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
